<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    style="@style/AppTheme">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/DarkBlue"
            android:id="@+id/img_logo2"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            />
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_name"
        android:hint="Name"
        android:layout_marginHorizontal="30dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_resname"
        android:hint="Restaurant Name"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_email"
        android:hint="Client Email address"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c_passwd"
            android:hint="Password"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/OffWhite"
            android:padding="15dp"
            android:inputType="textPassword"
            />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_resemail"
        android:hint="Restaurant Email address"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_contactno"
        android:hint="Client Contact Number"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_rescontactno"
        android:hint="Restaurant Contact Number"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_addr"
        android:hint="Client Address"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_resaddr"
        android:hint="Restaurant Address"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c_city"
        android:hint="City"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/OffWhite"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/btn_csignup"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@color/DarkBlue"
        android:text="Sign Up"
        android:textColor="@color/Biege"


        />
    </LinearLayout>
</ScrollView>
</LinearLayout>