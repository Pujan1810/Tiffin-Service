<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Signup_user">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_logo"
                android:background="@color/DarkBlue"

                />




    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edt_uname"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/edt_roleid"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:padding="15dp"
        android:background="@color/OffWhite"
        android:inputType="text"
    />



    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edt_emailid"
    android:layout_marginHorizontal="40dp"
    android:layout_below="@+id/edt_uname"
    android:layout_marginTop="10dp"
    android:hint="Email"
    android:padding="15dp"
    android:background="@color/OffWhite"
    android:inputType="textEmailAddress"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_phonenumber"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/edt_emailid"
        android:layout_marginTop="10dp"
        android:hint="Contact Number"
        android:padding="15dp"
        android:background="@color/OffWhite"
        android:inputType="number"
        android:maxLength="10"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_passwd"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/edt_phonenumber"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:padding="15dp"
        android:background="@color/OffWhite"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_addr"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/edt_passwd"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:padding="15dp"
        android:background="@color/OffWhite"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_city"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/edt_addr"
        android:layout_marginTop="10dp"
        android:hint="City"
        android:padding="15dp"
        android:background="@color/OffWhite"
        android:inputType="text"
        />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_city"
        android:text="Sign up"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="120dp"
        />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
